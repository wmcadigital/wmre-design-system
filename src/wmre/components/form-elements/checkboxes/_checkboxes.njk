{% macro wmreCheckboxes(params) %}

{# Imports #}
{% from "wmre/components/form-elements/label/_label.njk" import wmreLabel %}
{% from "wmre/components/icon/_icon.njk" import wmreIcon %}
{% from "wmre/components/form-elements/question/_question.njk" import wmreQuestion %}

<div class="wmre-fe-group">
  <fieldset class="wmre-fe-fieldset">
    <legend class="wmre-fe-fieldset__legend">
      {{ wmreQuestion() | indent(6) | trim }}
    </legend>
    <div class="wmre-fe-checkboxes">
      <span class="wmre-fe-checkboxes__desc">
        Select all options that apply
      </span>
      {%- for i in range(1,4) %}
      {#- Set checked state on first item in loop #}
      {%- set isChecked = (' checked="checked"' | safe) if i === 1 %}
      <label class="wmre-fe-checkboxes__container">
        Option {{i}}
        <input class="wmre-fe-checkboxes__input" value="Option {{i}}"{{isChecked}} type="checkbox"/>
        <span class="wmre-fe-checkboxes__checkmark">
          {# Get SVG icon and pass class #}
          {{-
            wmreIcon({
              icon: 'general-checkmark',
              class: 'wmre-fe-checkboxes__icon'
            }) | indent(8) | trim
          }}
        </span>
      </label>
      {%- endfor %}
    </div>
  </fieldset>
</div>

{% endmacro %}
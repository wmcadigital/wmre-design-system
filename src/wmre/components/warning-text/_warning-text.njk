{% macro wmreWarningText(params) %}

{# Imports #}
{% from "wmre/components/icon/_icon.njk" import wmreIcon %}

{# Set #}
{% set text = params.text if params.text else "Type something." %} {# set warning text #}
{% set icon = params.icon if params.icon %} {# set svg icon #}
{% set class = params.class if params.class %} {# set svg icon #}

<div class="wmre-warning-text {{class}}">
    {{
      wmreIcon({
        icon: icon,
        class: 'wmre-warning-text__icon'
      }) | indent | trim
    }}
    {{ text | safe }}
</div>

{% endmacro %}
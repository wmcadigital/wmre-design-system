{% macro wmreContentTilesProjects(params) %}
{# Imports #}
{%- from "wmre/components/link/link/_link.njk" import wmreLink -%}
{# Set vars #}
{% set class = ' ' + params.classModifiers if params.classModifiers %}
{% set title = params.title if params.title else "CTA Title" %} {# set title #}
{% set img = params.img if params.img else "$*cdn/img/tiles/rail-yellow.png" %} {# set default img #}
{% set imgalt = params.imgalt if params.imgalt else "title of image" %} {# set default img alt tag #}

<a href="#">
<article class="wmre-content-tile{{class}}">
  <img src="{{ img }}" alt="{{ imgalt }}" />

  {#- Title #}
  <h2>{{ title }}</h2>

  {%- if params.location %}
    {#- Location #}
    <div class="wmre-content-tile__copy">
      {{ params.location | safe | trim  -}} <div class="vertical"></div> {{ params.status | safe | trim  -}}
    </div>
  {%- else %}
    
  {%- endif %}
</article>
</a>
{% endmacro %}
<!DOCTYPE html>
<html lang="en-gb" class="wmre-html">
  <!-- Head -->
  {% include "www/_partials/_head.njk" %}
  <!-- end: Head -->

  <body>
    <!--[if IE]>
      <p class="browserupgrade">
        You are using an <strong>outdated</strong> browser. Please
        <a href="https://browsehappy.com/">upgrade your browser</a> to improve your experience and
        security.
      </p>
    <![endif]-->

    {# header #}
    {% from "wmre/patterns/header/_header.njk" import wmreHeader %}
    {{
      wmreHeader ({
        navItems: navItems
      })
    }}
    {# header #}

    {# Breadcrumb #}
    {# Don't display breadcrumb on homepage #}
    {% if section != 'Home' %}
        {% from "wmre/components/breadcrumb/_breadcrumb.njk" import wmreBreadcrumb %}
        {{
            wmreBreadcrumb({
              section: section,
              pageTitle: pageTitle
            })
        }}
    {% endif %}
    {# Breadcrumb #}

    <main class="wmre-container wmre-container--main">
      {% block body %}{% endblock %}
    </main>

    <!-- footer -->
    {% from "wmre/patterns/footer/_footer.njk" import wmreFooter %}
    {{
      wmreFooter()
    }}
    <!-- footer -->

    <!-- Scripts -->
    {% include "www/_partials/_scripts.njk" %}
    <!-- end: Scripts -->
  </body>

</html>

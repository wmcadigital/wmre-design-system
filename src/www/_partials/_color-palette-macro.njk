{% macro colorPalette(params) %}

<div class="wmre-col-1 wmre-col-sm-1-2 wmre-col-md-1-3 wmre-website-color-swatch">
  <span class="wmre-website-color-swatch__inner wmre-website-bg-color-{{params.varName}}"></span>
  <div class="wmre-grid component-details">
    <div class="wmre-col-1">
      <h3>{{params.name}}</h3>

<pre><code class="scss">{{- "" -}}
// HEX
<span class="color-hex"></span>

// SCSS VAR
$get-color({{params.varName}});
</code></pre>

    </div>
  </div>
</div>

{% endmacro %}